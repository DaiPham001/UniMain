<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragment.HomeFragment">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/circle"
        android:background="#B4C3D3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/viewpager"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circle"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/layout_tt"
                    android:background="@drawable/bogoc"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_gravity="center"
                        android:src="@drawable/card"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_gravity="center"
                        android:text="Thông tin \n sinh viên"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_kq"
                android:background="@drawable/bogoc"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_width="100dp"
                android:layout_height="110dp">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/chart"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:id="@+id/tv_kq"
                    android:layout_gravity="center"
                    android:text="Kết quả\nhọc tập"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_dk"
                android:layout_marginRight="20dp"
                android:background="@drawable/bogoc"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content">

                <ImageView

                    android:layout_gravity="center"
                    android:src="@drawable/course"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView

                    android:layout_gravity="center"
                    android:text="Đăng ký\nhọc phần"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_lh"
                android:layout_marginRight="20dp"
                android:background="@drawable/bogoc"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_width="100dp"
                android:layout_height="110dp">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/calendar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:id="@+id/tv_lh"
                    android:layout_gravity="center"
                    android:text="Lịch học"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_qll"
                android:layout_marginRight="20dp"
                android:background="@drawable/bogoc"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_width="100dp"
                android:layout_height="110dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/lop" />

                <TextView

                    android:layout_gravity="center"
                    android:text="Quản lý \n    lớp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_dn"
                android:layout_marginRight="20dp"
                android:background="@drawable/bogoc"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content">

                <ImageView

                    android:layout_gravity="center"
                    android:src="@drawable/nganh"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:text="Danh sách\n    ngành"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_hl"
                android:layout_marginRight="20dp"
                android:background="@drawable/bogoc"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content">

                <ImageView

                    android:layout_gravity="center"
                    android:src="@drawable/nganh"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:text="Đăng ký\n  thi lại"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_dktk"
                android:layout_marginRight="20dp"
                android:background="@drawable/bogoc"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content">

                <ImageView

                    android:layout_gravity="center"
                    android:src="@drawable/nganh"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:text="Câp tài \n khoản"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>