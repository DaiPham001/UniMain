<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow>

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="5dp"
            android:background="#0B0A0B"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_stt_u2_rg"
            android:layout_width="40dp"
            android:layout_gravity="center"
            android:text="STT"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#0B0A0B"
            android:textSize="10dp" />


        <TextView
            android:id="@+id/tv_u2_malophp"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:text="Mã lớp HP"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#0B0A0B"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_u2_tenmh"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:text="Tên môn học"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#0B0A0B"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_lhdk"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:text="Lớp học dự kiến"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#0B0A0B"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_u2_tinchi"
            android:layout_width="40dp"
            android:layout_gravity="center"
            android:text="TC"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#0B0A0B"
            android:textSize="10dp" />


        <TextView
            android:id="@+id/tv_tongtc"
            android:layout_width="90dp"
            android:layout_gravity="center"
            android:text="Tổng TC"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#0B0A0B"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_u2_hp"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:text="Học phi"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#0B0A0B"
            android:textSize="10dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_trangthai"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#0B0A0B"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_ngaydk"
            android:layout_width="129dp"
            android:layout_gravity="center"
            android:text="Ngày đăng ký"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#0B0A0B"
            android:textSize="10dp" />
    </TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#0B0A0B"
        android:textSize="2dp" />

</TableLayout>