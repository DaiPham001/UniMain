    <LinearLayout
        android:id="@+id/lll"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_avata"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mssv"
