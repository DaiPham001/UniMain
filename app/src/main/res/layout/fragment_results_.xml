<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragment.Results_Fragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:textAlignment="center"
                android:text="STT"
                android:layout_width="40dp"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_"
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#0B0A0B"
                android:layout_height="match_parent"
                android:layout_width="2dp"/>


            <TextView
                android:id="@+id/tv_hoten"
                android:text="Họ Tên"
                android:textAlignment="center"
                android:layout_width="120dp"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#0B0A0B"
                android:layout_height="match_parent"
                android:layout_width="2dp"/>

            <TextView
                android:textAlignment="center"
                android:text="Tên môn"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_width="200dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#0B0A0B"
                android:layout_height="match_parent"
                android:layout_width="2dp"/>

            <TextView
                android:text="Số tín chỉ"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_width="100dp"/>
            <TextView
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#0B0A0B"
                android:layout_height="match_parent"
                android:layout_width="2dp"/>

            <TextView
                android:id="@+id/tv_diemcc"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="120dp"
                android:text="Chuyên cần"/>
            <TextView
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#0B0A0B"
                android:layout_height="match_parent"
                android:layout_width="2dp"/>
            <LinearLayout
                android:layout_width="100dp"
                android:orientation="vertical">
                <TextView
                    android:text="Hệ số"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="1"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        tools:ignore="Suspicious0dp" />
                    <TextView
                        android:text="2"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        tools:ignore="Suspicious0dp" />
                    <TextView
                        android:text="3"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        tools:ignore="Suspicious0dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#0B0A0B"
                android:layout_height="match_parent"
                android:layout_width="2dp"/>

            <TextView
                android:text="Được dự thi"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_width="70dp"
                android:layout_gravity="center"/>

            <TextView
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#0B0A0B"
                android:layout_height="match_parent"
                android:layout_width="2dp"/>
            <LinearLayout
                android:layout_width="150dp"
                android:orientation="vertical">
                <TextView
                    android:text="Cuối kỳ"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="1"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:textAlignment="center"
                        android:layout_height="match_parent"
                        tools:ignore="Suspicious0dp" />
                    <TextView
                        android:text="2"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        tools:ignore="Suspicious0dp" />
                    <TextView
                        android:text="Điểm thi"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        tools:ignore="Suspicious0dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#0B0A0B"
                android:layout_height="match_parent"
                android:layout_width="2dp"/>

            <TextView
                android:text="Điểm tổng kết"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#0B0A0B"
                android:layout_height="match_parent"
                android:layout_width="2dp"/>

            <TextView
                android:text="Thăng điểm 4"

                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_width="100dp"/>

            <TextView
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#0B0A0B"
                android:layout_height="match_parent"
                android:layout_width="2dp"/>

            <TextView
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_width="80dp"
                android:text="Điểm chữ"/>

            <TextView
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#0B0A0B"
                android:layout_height="match_parent"
                android:layout_width="2dp"/>

            <TextView
                android:text="Xếp loại"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_width="80dp"
                android:textAlignment="center"/>

            <TextView
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#0B0A0B"
                android:layout_height="match_parent"
                android:layout_width="2dp"/>

            <TextView
                android:text="Ghi chú"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_width="80dp"
                android:textAlignment="center"/>

            <TextView
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#0B0A0B"
                android:layout_height="match_parent"
                android:layout_width="2dp"/>
        </TableRow>

        <TextView
            android:textSize="2dp"
            android:background="#0B0A0B"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_rs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </TableLayout>

</HorizontalScrollView>