<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:id="@+id/layout_rc"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:id="@+id/tv_stt_rg"
                android:textAlignment="center"
                android:text="STT"
                android:layout_width="40dp"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#0B0A0B"
                android:layout_height="match_parent"
                android:layout_width="2dp"/>


            <TextView
                android:id="@+id/tv_malophp"
                android:textAlignment="center"
                android:text="Mã môn HP"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_width="150dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#0B0A0B"
                android:layout_height="match_parent"
                android:layout_width="2dp"/>

            <TextView
                android:id="@+id/tv_tenmh"
                android:text="Tên môn học"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_width="200dp"/>
            <TextView
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#0B0A0B"
                android:layout_height="match_parent"
                android:layout_width="2dp"/>

            <TextView
                android:id="@+id/tv_tengv"
                android:text="Tên giảng viên"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_width="150dp"/>
            <TextView
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#0B0A0B"
                android:layout_height="match_parent"
                android:layout_width="2dp"/>

            <TextView
                android:id="@+id/tv_tinchi"
                android:text="TC"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_width="40dp"
                android:layout_gravity="center"/>

            <TextView
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#0B0A0B"
                android:layout_height="match_parent"
                android:layout_width="2dp"/>


            <TextView
                android:id="@+id/tv_hp"
                android:text="Học phi"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_width="120dp"/>

            <TextView
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#0B0A0B"
                android:layout_height="match_parent"
                android:layout_width="2dp"/>

        </TableRow>

        <TextView
            android:textSize="2dp"
            android:background="#0B0A0B"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"/>

    </TableLayout>

</TableLayout>